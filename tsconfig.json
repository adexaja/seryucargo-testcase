{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "typescript-dotenv"
      }
    ],
    "paths": {
      "@seryucargo/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "__tests__/**/*.ts"]
}
